{% extends 'base.html.twig' %}

{% block title %}History index{% endblock %}

{% block body %}
    <h1>History index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Event</th>
                <th>Created_at</th>
                <th>Details</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for history in histories %}
            <tr>
                <td>{{ history.id }}</td>
                <td>{{ history.event }}</td>
                <td>{{ history.createdAt ? history.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ history.details }}</td>
                <td>
                    <a href="{{ path('app_board_history_show', {'id': history.id}) }}">show</a>
                    <a href="{{ path('app_board_history_edit', {'id': history.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_board_history_new') }}">Create new</a>
{% endblock %}
